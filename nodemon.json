{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "api-es6",
    "config"
  ],
  "env": {
    "NODE_ENV": "development",
    "DEBUG":"*,-babel"
  },
  "ext": "js json yaml"
}
